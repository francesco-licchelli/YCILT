<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TextView per mostrare le coordinate -->
    <TextView
        android:id="@+id/coordinatesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/loading_location"
        android:gravity="center_horizontal"/> <!-- Inizialmente nascosto -->

    <!-- TextView per mostrare l'indirizzo -->
    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:visibility="gone" /> <!-- Inizialmente nascosto -->

</LinearLayout>